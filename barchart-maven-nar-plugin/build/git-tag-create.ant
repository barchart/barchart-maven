<project default="git" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<property name="tag" value="barchart-karaf-app-1.1.1-SNAPSHOT" />
	<property name="note" value="fake release for testing" />

	<target name="git">

		<exec executable="git">
			<arg value="tag" />
			<arg value="-a" />
			<arg value="${tag}" />
			<arg value="-m" />
			<arg value="${note}" />
		</exec>

		<exec executable="git">
			<arg value="push" />
			<arg value="origin" />
			<arg value="refs/tags/${tag}" />
		</exec>
	</target>

</project>
